mixin nav_item(href, active, style)
	- if (!style) var style = "";
	li(class=active, style=style): a&attributes(attributes)( href=href )
		block

mixin nav_image_item(href, image, name, active, style)
	li(class=active)
		if style
			a( href=href, style=style )
				img(alt=name, src=basePath + image)&attributes(attributes)
		else
			a( href=href )
				img(alt=name, src=basePath + image)&attributes(attributes)
		block

mixin nav_item_dropdown(href, active, id)
	- if (!active) var active = "";

	li(class=["dropdown", active])
		a.dropdown-toggle(id="dropdown-anchor-" + id, href=href, data-toggle="dropdown", role="button", aria-expanded="false" )= attributes.label
		if (id)
			ul.dropdown-menu( role="menu", id= id )
				block
		else
			ul.dropdown-menu( role="menu")
				block

mixin nav_divider
