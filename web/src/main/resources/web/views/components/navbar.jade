mixin navbar-fixed-logo(name, text, id, style, href, image, textColor)
	- if (!style) var style = "default";
	- if (!href) var href = "#";
	nav( role="navigation", class=["navbar", "navbar-fixed-top", "navbar-" + style], id=name)
		.container
			.navbar-header
				button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#" + id, aria-expanded="false", aria-controls="navbar")
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				div(style="display: flex;")
					a(href=basePath + href)
						img(alt=name, src=basePath + image)&attributes(attributes)
					if text
						span
							if textColor
								h2(style="color: " + textColor)= text
							else
								h2= text
			.collapse.navbar-collapse( id=id )
				ul.nav.navbar-nav
					block

