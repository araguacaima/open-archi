doctype html
html(lang="en")
    head
        title= title
    body(style="font-family:Lucida Sans Unicode; -webkit-font-smoothing: antialiased; -webkit-text-size-adjust: none; width: 100% !important; height: 100%;")
        table(style="height: 100%;")
            tr
                td(style="display: block !important; max-width: 600px !important; margin: 0 auto !important; clear: both !important;")
                    table(style="width: 100%;")
                        tr
                            td(align='left')
                                img(src="cid:" + imageResourceName, alt='OpenArchi logo', height="50px", style="max-width: 100%")
                            td(align='right')
                                h6(style="line-height: 1.1; margin-bottom: 15px; color: #000;font-weight: 600; font-size: 22px; text-transform: capitalize; color: #444;margin: 0 !important;")= title
        h4(style="font-size: 20px !important; text-transform: capitalize; line-height: 3rem; font-weight: 400 !important; color: #2cc7c9 !important;") Report
        table(style="width: 100%;")
            if messages
                each message in messages
                    tr
                        if message.type == messageTypeSuccess
                            td(style="background-color: #c3f4b9; text-align: left; font-weight: bold;")= message.comment
                        if message.type == messageTypeDebug
                            td(style="background-color: #e0e0e0; text-align: left; font-weight: bold;")= message.comment
                        if message.type == messageTypeWarning
                            td(style="background-color: #eeed98; text-align: left; font-weight: bold;")= message.comment
                        if message.type == messageTypeError
                            td(style="background-color: #f99587; text-align: left; font-weight: bold;")= message.comment
                        if message.type == messageTypeInfo
                            td(style="text-align: left; font-weight: bold;")= message.comment